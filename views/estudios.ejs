<% include partials/_header %>

<div class="container-fluid px-2">
  <div class="col-lg-8 col-md-10 col-sm-12 mx-auto">
    <h2 class="text-center mb-4">Lista de Estudios</h2>
    <div class="table-responsive">
      <table class="table table-bordered table-hover text-center w-100">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Tipo</th>
            <% if (user.rol.toLowerCase() == "admin") { %> 
              <th>Acciones</th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% if (estudios.length > 0) { %>
            <% estudios.forEach(estudio => { %>
              <tr>
                <td><%= estudio.nombre %></td>
                <td><%= estudio.tipo %></td>
                <% if (user.rol.toLowerCase() == "admin") { %> 
                  <td>
                    <div class="d-flex justify-content-center">
                      <a href="/estudios/edit/<%= estudio._id %>" class="btn btn-info btn-sm me-2">Editar</a>
                      <a href="/estudios/delete/<%= estudio._id %>" class="btn btn-danger btn-sm">Borrar</a>
                    </div>
                  </td>
                <% } %>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="3" class="text-center">No hay estudios registrados</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<% include partials/_footer %>
