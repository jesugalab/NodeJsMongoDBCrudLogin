<% include partials/_header %>


<div class="col-md-7 mx-auto">
  <h2>Lista de Estudios</h2>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Tipo</th>
        <% if (user.rol.toLowerCase() == "admin") { %> 
          <th>Operaciones</th>
        <% } %>
      </tr>
    </thead>
    <tbody>
      <% if (estudios.length > 0) { %>
        <% estudios.forEach(estudio => { %>
          <tr>
            <td><%= estudio._id %></td>
            <td><%= estudio.nombre %></td>
            <td><%= estudio.tipo %></td>
            <% if (user.rol.toLowerCase() == "admin") { %> 
              <td>
                <div class="btn-group" role="group">
                  <a href="/estudios/edit/<%= estudio._id %>" class="btn btn-info btn-sm me-1" style="width: 60px;">Edit</a>
                  <a href="/estudios/delete/<%= estudio._id %>" class="btn btn-danger btn-sm" style="width: 60px;">Delete</a>
                </div>
              </td>
            <% } %>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="3" class="text-center">No hay estudios registrados</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>



<% include partials/_footer %>