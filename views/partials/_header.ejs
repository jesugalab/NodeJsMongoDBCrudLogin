  <body>
<!--Navbar-->
<div class="menu-principal text-center">
  
    <!-- NAVIGATION -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">Sesión y CRUD Nodejs Y Mongodb</a>
