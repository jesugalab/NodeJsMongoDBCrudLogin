<% include partials/_header %>


<div class="col-md-7 mx-auto">
  <h2>Lista de Alumnnos</h2>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Apellidos</th>
        <th>Correo</th>
        <% if (user.rol.toLowerCase() == "admin") { %> 
          <th>Operaciones</th>
        <% } %>
      </tr>
    </thead>
    <tbody>
      <% if (usuarios.length > 0) { %>
        <% usuarios.forEach(usuario => { %>
          <tr>
            <td><%= usuario._id %></td>
            <td><%= usuario.nombre %></td>
            <td><%= usuario.apellidos %></td>
            <td><%= usuario.email %></td>
            <%if (user.rol.toLowerCase() == "admin") {%>
              <td>              
                <div class="btn-group" role="group">
                  <a href="/usuarios/edit/<%= usuario._id %>" class="btn btn-info btn-sm me-1" style="width: 60px;">Edit</a>
                  <a href="/usuarios/delete/<%= usuario._id %>" class="btn btn-danger btn-sm" style="width: 60px;">Delete</a>
                </div>
              </td>
            <% } %>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="3" class="text-center">No hay alumnos registrados</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>


<% include partials/_footer %>