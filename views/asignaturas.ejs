<% include partials/_header %>

<div class="col-md-7 mx-auto">
  <h2>Lista de Asignaturas</h2>
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th>Curso</th>
        <th>Estudio</th>
        <th>Lista Alumnos</th>
        <th>Lista Profesores</th>
      </tr>
    </thead>
    <tbody>
      <% if (asignaturas.length > 0) { %>
        <% asignaturas.forEach(asignatura => { %>
          <tr>
            <td><%= asignatura._id %></td>
            <td><%= asignatura.nombre %></td>
            <td><%= asignatura.curso %></td>

            <!-- Verificamos si el estudio existe en el mapa -->
            <% if (estudiosMap[asignatura.estudio_id]) { %>
              <td><%= estudiosMap[asignatura.estudio_id].nombre %> - <%= estudiosMap[asignatura.estudio_id].tipo %></td>
            <% } else { %>
              <td>Estudio no encontrado</td>
            <% } %>

            <td><%= asignatura.listaAlumnos.join(", ") %></td>
            <td><%= asignatura.listaProfesores.join(", ") %></td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="6" class="text-center">No hay asignaturas registradas</td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>

<% include partials/_footer %>
